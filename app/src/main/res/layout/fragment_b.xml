<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FragmentB"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/fotodetalle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/plaza_bolivar"
        />

    <TextView
        android:id="@+id/textoDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direccion del parque"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="italic"
        android:padding="16dp"
        />


            <iammert.com.expandablelib.ExpandableLayout
                android:id="@+id/expand_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:parentLayout="@layout/layout_padre"
                app:childLayout="@layout/layout_hijo"
                >

            </iammert.com.expandablelib.ExpandableLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>